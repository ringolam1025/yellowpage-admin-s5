{
  "kind": "collectionType",
  "collectionName": "directories",
  "info": {
    "singularName": "directory",
    "pluralName": "directories",
    "displayName": "Shop"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "directories"
    },
    "address": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": false
    },
    "latitude": {
      "type": "float",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": false
    },
    "longitude": {
      "type": "float",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": false
    },
    "images": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "logo": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "phone": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": false
    },
    "email": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "about": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": false
    },
    "opening_hours": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "component": "shop.opening-hours",
      "repeatable": true,
      "required": false
    },
    "social_media": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "component": "common.social-media",
      "repeatable": true
    },
    "rewards": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "component": "shop.rewards",
      "repeatable": true
    },
    "cities": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::location.location",
      "inversedBy": "shops"
    },
    "tags": {
      "type": "customField",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "customField": "plugin::tagsinput.tags",
      "options": {
        "apiUrl": ""
      }
    },
    "Others": {
      "type": "dynamiczone",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "components": [
        "shop.premium",
        "shop.ads"
      ]
    }
  }
}
